    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/app"
        },
        {
            "name": "Chrome portable",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            "port": 9223,
            "runtimeExecutable": "C:/portable/GoogleChromePortable/GoogleChromePortable.exe",
            "runtimeArgs": [
                "--new-window",
                "--remote-debugging-port=9223"
            ],
            "webRoot": "${workspaceFolder}"
    }
    ]
}